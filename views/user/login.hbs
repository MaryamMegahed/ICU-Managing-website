<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Log in</title>
    <link rel="stylesheet" href="../CSS/all.min.css" />
    <link rel="stylesheet" href="../CSS/main.css" />
    <link rel="stylesheet" href="../CSS/login.css" />
    <link rel="stylesheet" href="../CSS/Normalize.css" />
    <link rel="stylesheet" href="../CSS/bootstrap-grid.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container">
      <div class="header">
        <div class="logo home-btn">
          <p class="home-btn">New Life</p>
          <h2 class="home-btn">ICU</h2>
        </div>
        <div class="links">
          <ul class="links">
         <li><a href="http://localhost:8000/aboutus">Department</a></li>
            <li><a href="http://localhost:8000/aboutus#ayhaga">About US</a></li>
          </ul>
        </div>
      </div>
      <div class="login-page">
        <div class="show-login">
          <h2>LOGIN</h2>
            <p class="error">{{errorMessages}}</p>
          <form action="login" method="post" class="login-form">
            <label for="email">Email</label>
            <input required type="email" name="email" id="email" />
            <label for="password">Password</label>
            <input required type="password" name="password" id="password" />
            <div class="show-pass">
            <input type="checkbox" onclick="showPassword()" name="show-pass" id="show-pass">
            <label for="show-pass">Show Password</label>
            </div>
            <button
              type="submit"
              value="LOGIN"
              class="login-btn button"
            >LOGIN</button>
          </form>
          <div class="sec-button back login-back">Back</div>
        </div>
      </div>
    </div>
  </body>
  <script src="../JS/all.min.js"></script>
  <script src="../JS/main.js"></script>
  <script src="../JS/bootstrap.bundle.min.js"></script>
</html>